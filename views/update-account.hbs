{{!-- Update user profile and links to update projects, programmers, and companies - using express handlebars --}}

<title>Bug Tracker | Update Profile</title>
<link type="text/css" rel="stylesheet" href="css/update.css">
        
        
{{!-- Container for the dashboard --}}
<div 
    class="form-card mdl-card mdl-shadow--2dp mdl-cell mdl-cell--12-col mdl-cell--12-col-tablet mdl-cell--12-col-desktop" 
    id="login-box"
>
    <div class="mdl-card__title mdl-color-text--white dashboard-top-bar">
        <h2 class="mdl-card__title-text">Update Your Profile</h2>
    </div>
    <div class="mdl-card__supporting-text mdl-color-text--grey-600">
        <form id="recordForm">
            <fieldset>
        
                <label for="programmer-fname">First name</label>
                <input required type="text" name="programmerFName" id="programmer-fname-field" value="{{firstName}}"> 
                <br>

                <label for="programmer-lname">Last name</label>
                <input required type="text" name="programmerLName" id="programmer-lname-field" value="{{lastName}}"> 
                <br>

                <label for="programmer-email">Email</label>
                <input required type="text" name="userEmail" id="programmer-email-field" value="{{email}}"> 
                <br>

                <label for="user-phone">Mobile Number</label>
                <input required type="text" name="user-phone" id="programmer-phone-field" value="{{phone}}"> 
                <br>
        
                <label for="started-date">Date Started</label>
                <input class="submitBtn" required type="date" name="startedDate" id="project-date-started-field" placeholder="yyyy-mm-dd" value="{{dateStarted}}"> 
                <br>

                <label for="programmer-access">Access Level</label>
                <select disabled class="submitBtn" name="programmerAccess" id="programmer-access-field" value="{{accessLevel}}">
                    <option value="" disabled selected>{{accessLevel}}</option>
                </select> 
                <br>

                
            </fieldset>
        </form>
        <br>
        <input class="submitBtn btn-style" type="submit" id="save" value="Save" 
            onclick="updateUser(
                document.getElementById('programmer-fname-field').value,
                document.getElementById('programmer-lname-field').value, 
                document.getElementById('programmer-email-field').value, 
                document.getElementById('programmer-phone-field').value,
                document.getElementById('project-date-started-field').value,
                document.getElementById('programmer-access-field').value)"
        >
        <input class="submitBtn btn-style" type="submit" id="cancel" value="Cancel" onclick="cancelEdit()">

    </div>
</div>
<br>

{{!-- Container for the update links --}}
<div class="form-card mdl-card mdl-shadow--2dp mdl-cell mdl-cell--12-col mdl-cell--12-col-tablet mdl-cell--12-col-desktop">
    <div class="mdl-card__title mdl-color-text--white dashboard-top-bar">
        <h2 class="mdl-card__title-text">Admin pages</h2>
    </div>
    <div class="mdl-card__supporting-text mdl-color-text--grey-600">
        
        <a href="http://localhost:5000/bug_tracker/programmers">
            <button class="submitBtn btn-style btn-space" id="save">Programmers</button>
        </a>
        <p class="inline-btn-msg">Add or update programmers</p>
        <br>

        <a href="http://localhost:5000/bug_tracker/projects">
            <button class="submitBtn btn-style btn-space" id="save">Projects</button>
        </a>
        <p class="inline-btn-msg">Add or update projects</p>
        <br>
        
        <a href="http://localhost:5000/bug_tracker/companies">
            <button class="submitBtn btn-style btn-space" id="save">Companies</button>
        </a>
        <p class="inline-btn-msg">Add or update companies</p>
        <br>
        <br>

        <button class="submitBtn btn-style btn-space" id="reset-table">Restore Database</button>
        <p class="inline-btn-msg">Restore Database to initial values</p>    
        <div id="spinner2" class="mdl-spinner mdl-spinner--single-color mdl-js-spinner is-active"></div>
    </div>
</div>

<script src="js/update-account.js"></script>
