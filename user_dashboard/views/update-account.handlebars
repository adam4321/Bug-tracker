<title>Update User Profile</title>
  <link rel="stylesheet" href="https://code.getmdl.io/1.1.3/material.orange-indigo.min.css">
  <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
  <script defer src="https://code.getmdl.io/1.1.3/material.min.js"></script>
  <link type="image/x-icon" rel="shortcut icon" href="favicon-1.ico"/>
  <link type="text/css" rel="stylesheet" href="style.css">
        
        
<!-- Container for the dashboard -->
<div class="mdl-card mdl-shadow--2dp mdl-cell mdl-cell--12-col mdl-cell--12-col-tablet mdl-cell--12-col-desktop" id="login-box">
    <div id="dashboard-top-bar" class="mdl-card__title mdl-color-text--white">
        <h2 class="mdl-card__title-text">Update User Profile</h2>
    </div>
    <div class="mdl-card__supporting-text mdl-color-text--grey-600">
        <form id="recordForm">
            <fieldset>
        
                <label for="programmer-fname">First name</label>
                <input required type="text" name="programmerFName" id="programmer-fname-field" value="{{firstName}}"> <br>

                <label for="programmer-lname">Last name</label>
                <input required type="text" name="programmerLName" id="programmer-lname-field" value="{{lastName}}"> <br>

                <label for="programmer-email">Email</label>
                <input required type="text" name="userEmail" id="programmer-email-field" value="{{email}}"> <br>

                <label for="user-phone">Mobile Number</label>
                <input required type="text" name="user-phone" id="programmer-phone-field" value="{{phone}}"> <br>
        
                <label for="started-date">Date Started</label>
                <input class="submitBtn" required type="date" name="startedDate" id="project-date-started-field" placeholder="yyyy-mm-dd" value="{{dateStarted}}"> <br>

                <label for="programmer-access">Access Level</label>
                <select class="submitBtn" required name="programmerAccess" id="programmer-access-field" value="{{accessLevel}}">
                    <option value="" disabled selected>Select an access level (Highest: 4)</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                </select> <br>

                
            </fieldset>
        </form>
        <br>
        <input type="submit" id="save" value="Save" 
                    onclick="updateUser(
                        document.getElementById('programmer-fname-field').value,
                        document.getElementById('programmer-lname-field').value, 
                        document.getElementById('programmer-email-field').value, 
                        document.getElementById('programmer-phone-field').value,
                        document.getElementById('project-date-started-field').value,
                        document.getElementById('programmer-access-field').value)"
                >
                <input type="submit" id="cancel" value="Cancel" onclick="cancelEdit()">

    </div>
</div>
<script src="update-account.js"></script>